<div class="container">
    <div class="columns is-variable is-8 is-multiline">
        {% for page in productPages %}
        {% if page.id == pageId %}
        <div class="column is-full has-text-centered">
            <h1 class="page-title">{{page.title}}</h1>
        </div>
        <div class="feature-img-col column is-narrow-tablet">
            <img class="feature-img" src="/img/{{page.featureImage.src}}" alt="{{page.featureImage.alt}}">
        </div>
        <div class="descr column has-text-centered-mobile">
            {% for description in page.descriptions %}
            <h3 class="descr-title">{{description.title}}</h3>
            <p class="descr-text">{{description.text}}</p>
            {% endfor %}
        </div>
    </div>
    <div class="columns is-variable is-8 is-multiline">
        {% for image in page.images %}
        <div class="column is-half-tablet has-text-centered-mobile">
            <img class="product-img" src="/img/{{image.src}}" alt="{{image.alt}}">
            <p class="img-caption">{{image.caption}}</p>
        </div>
        {% endfor %}
        {%  endif %}
        {% endfor %}
    </div>
</div>
